<section class="hero is-fullheight">
  <div class="header has-text-centered">
          <div class="brand">
            <img src="/img/remindr logo.png" alt="main-logo" class="remindrLogo">
          </div>
          <h2 class="description is-size-5 has-text-centered">
            Welcome to Remindr! Remindr is an easy to use task manager app that helps you organize your busy schedule and ensure you never miss an important event again. <br> Get started today by creating a new account, or if you are an existing member, login below to view or create your own Remindrs!
          </h2>
        </div>
  <div class="hero-body container">
    <div class="form-container">

      <div class="field">
        <label class="label">Email</label>
        <p class="control has-icons-left has-icons-right">
          <input id='email-login' class="input" type="email" placeholder="Email">
            <span class="icon is-small is-left">
            <i class="fas fa-envelope"></i>
            </span>
        </p>
      </div>
              
      <div class="field">
        <label class="label">Password</label>
        <p class="control has-icons-left">
          <input id='password-login' class="input" type="password" placeholder="Password">
            <span class="icon is-small is-left">
              <i class="fas fa-lock"></i>
            </span>
        </p>
      </div>
            
      <div class="control pt-2 pb-2 has-text-centered">
        <button type='submit' id='login-button' class="button is-info is-rounded is-fullwidth">
          Login
        </button>
      </div>

      <div class="control pt-2 has-text-centered">
        <button type='submit' id='signup-form' class="button is-info is-rounded is-fullwidth">
           Create Account
        </button>
      </div>
           
    </div>
  </div>
</section>

<script src="/js/login.js"></script>
