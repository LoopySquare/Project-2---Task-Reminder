<div class="container">
  <div class="card">
    <div class="card-content">
      <div class="media">
        <div class="media-left">
          <figure class="image is-128x128">
            <img src="https://bulma.io/images/placeholders/96x96.png" alt="Placeholder image">
          </figure>
        </div>
        <div class="media-content">
          <p class="title is-4">{{first-name}} {{last-name}}</p>
          <p class="subtitle is-6">{{username}}</p>
        </div>
      </div>
      <div class="card-content">
        <p class="subtitle">
          a place for a bio?
        </p>
      </div>
      <footer class="card-footer">
        <p class="card-footer-item">
          <span><a href="lnik to edit account?">Edit Account</a></span>
        </p>
        <p class="card-footer-item">
          <span><a href="link to logout?">Logout</a></span>
        </p>
      </footer>
    </div>
  </div>
</div>

<div class="container">
  <table class="table is-hoverable is-fullwidth has-text-centered">
    <thead>
      <tr>
        <th>ID</th>
        <th>Remindr Title</th>
        <th>Description</th>
        <th>Alert Day(s)</th>
        <th>Alert Time</th>
        <th>Edit Remindr</th>
        <th>Delete Remindr</th>
      </tr>
    </thead>
    <tfoot>
      <tr>
        <th>ID</th>
        <th>Remindr Title</th>
        <th>Description</th>
        <th>Alert Day(s)</th>
        <th>Alert Time</th>
        <th>Edit Remindr</th>
        <th>Delete Remindr</th>
      </tr>
    </tfoot>
    {{#if remindrs.length}}
    <tbody>
      {{#each remindrs as |remindr|}}
      <tr>
        <th>{{remindr.id}}</th>
          <td><a href="link to modal?" title="Sample Title">{{remindr.title}}</a></td>
          <td><a href="link to modal?" title="Sample Title">{{remindr.description}}</a></td>
          <td>{{remindr.day}}</td>
          <td>{{remindr.time}}</td>
          <td><a href="link to edit remindr?" class="button is-info" title="Edit Remindr"><i class="fas fa-edit"></i></a></td>
          <td><a href="DELETE" class="button is-danger" title="Sample Title"><i class="fa fa-trash" aria-hidden="true"></i></a></td>
      </tr>
        {{/each}}
    </tbody>
    {{/if}}
  </table>
</div>