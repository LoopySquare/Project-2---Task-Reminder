
<script src="https://code.jquery.com/jquery-1.12.4.js"></script>
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
{{#user }}
<div class="container">
  <div class="card">
    <div class="card-content">
      <div class="media">
        <div class="media-left">
          <figure class="image is-128x128">
            <img src="https://bulma.io/images/placeholders/96x96.png" alt="Placeholder image">
          </figure>
        </div>
        <div class="media-content">
          <p class="title is-4">{{first_name}} {{last_name}}</p>
          <p class="subtitle is-6">{{email}}</p>
        </div>
      </div>
      <div class="card-content">
        <p class="subtitle">
          a place for a bio?
        </p>
      </div>
      <footer class="card-footer">
        <p class="card-footer-item">
          <span id="edit-account"><a href="#">Edit Account</a></span>
        </p>
        <p class="card-footer-item">
          <span id="new-remindr"><a href="#">New Remindr</a></span>
        </p>
        <p class="card-footer-item">
          <span id="logout"><a href="#">Logout</a></span>
        </p>
      </footer>
    </div>
  </div>
</div>
{{/user }}

<div class="container">
  <table class="table is-hoverable is-fullwidth has-text-centered">
    <thead>
      <tr>
        <th>ID</th>
        <th>Remindr Title</th>
        <th>Description</th>
        <th>Alert Day(s)</th>
        <th>Alert Time</th>
        <th>Edit Remindr</th>
        <th>Delete Remindr</th>
      </tr>
    </thead>
    <tfoot>
      <tr>
        <th>ID</th>
        <th>Remindr Title</th>
        <th>Description</th>
        <th>Alert Day(s)</th>
        <th>Alert Time</th>
        <th>Edit Remindr</th>
        <th>Delete Remindr</th>
      </tr>
    </tfoot>
    {{#if remindrs.length}}
    <tbody>
      {{#each remindrs as |remindr|}}
      <tr>
        <th>{{remindr.id}}</th>
          <td><a href="link to modal?" title="Sample Title">{{remindr.event_name}}</a></td>
          <td><a href="link to modal?" title="Sample Title">{{remindr.description}}</a></td>
          <td><p class="remindr-date">{{remindr.send_date}}</p></td>
          <td>{{remindr.send_time}} {{remindr.am_pm}}</td>
          <td><a data-remindrId="{{remindr.id}}" class="button is-info edit-remindr" title="Edit Remindr"><i class="fas fa-edit"></i></a></td>
          <td><a data-remindrId="{{remindr.id}}" class="button is-danger delete-remindr" title="Sample Title"><i class="fa fa-trash" aria-hidden="true"></i></a></td>
      </tr>
        {{/each}}
    </tbody>
    {{/if}}
  </table>
</div>

<script src="/js/logout.js"></script>
<script src="/js/profile.js"></script>
<script src="/js/dateFormat.js"></script>
