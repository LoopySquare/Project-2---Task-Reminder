{{#user }}
<section class="hero is-fullheight">
  <div class="hero-body container">
    <div class="card pr-4 pl-4">
      <div class="card-content">

        <div class="field">
          <label class="label">Email <span style="color: red; font-style: italic; font-weight: 400">(Cannot Be Changed)</span></label>
          <div class="control has-icons-left has-icons-right">
            <input class="input" type="email" placeholder="example@email.com" value="{{email}}" readonly>
              <span class="icon is-small is-left">
                <i class="fas fa-envelope"></i>
              </span>
          </div>
        </div>

        <div class="field">
          <label class="label">Current Password</label>
          <p class="control has-icons-left">
            <input id="current-password" class="input" type="password" placeholder="Password" value="">
              <span class="icon is-small is-left">
                <i class="fas fa-lock"></i>
              </span>
          </p>
        </div>  
        
        <div class="field">
          <label class="label">New Password</label>
          <p class="control has-icons-left">
            <input id="new-password" class="input" type="password" placeholder="Password" value="">
              <span class="icon is-small is-left">
                <i class="fas fa-lock"></i>
              </span>
          </p>
        </div>

        <div class="field">
          <label class="label">Confirm New Password</label>
          <p class="control has-icons-left">
            <input id="confirm-password" class="input" type="password" placeholder="Confirm Password" value="">
              <span class="icon is-small is-left">
                <i class="fas fa-lock"></i>
              </span>
          </p>
        </div>

        <div class="control pt-5 pb-2 has-text-centered">
          <button data-editId="{{id}}" id='update-password' class="button is-info is-rounded is-fullwidth">
            Save Account
          </button>
          <br>
          <button id='cancel' class="button is-info is-rounded is-fullwidth">
              Cancel
          </button>

        </div>

      </div>
    </div>
  </div>
</section>

<script src="/js/updatePassword.js"></script>

{{/user }}