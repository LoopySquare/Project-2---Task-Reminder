{{#localTimeRemindrs }}
<section class="hero is-fullheight">
    <div class="header-profile header has-text-centered color-change-5x">
        <div class="brand">
            <img src="/img/remindr logo.png" alt="main-logo" class="remindrLogo">
        </div>
    </div>

    <div class="hero-body container">
        <div class="card profile-card peace-card pr-4 pl-4">
            <div class="card-content">
                <div class="field">
                    <label class="label">Remindr Title</label>
                    <div class="control has-icons-left">
                        <input id="event_name" class="input" type="text" placeholder="Remindr Title" value="{{event_name}}">
                        <span class="icon is-small is-left">
                            <i class="far fa-edit"></i>
                        </span>
                    </div>
                </div>
                    
                <div class="field">
                    <label class="label">Description</label>
                    <div class="control">
                        <textarea id="description" class="textarea" placeholder="Short description of Remindr">{{description}}</textarea>
                    </div>
                </div>

                <div class="field">
                    <label class="label">Message</label>
                    <div class="control">
                        <textarea id="content" class="textarea" placeholder="Short description of Remindr">{{content}}</textarea>
                    </div>
                </div>

                <div class="field">
                    <label id="formatted-date" class="label">Alert Day currently selected: {{send_date}}</label>
                    <div class="control has-icons-left has-icons-right">
                        <input id="send_date" type="date">
                    </div>
                </div>

                <div class="field">
                    <label id="formatted-time" class="label">Alert Time currently selected: {{send_date}}</label>
                    <div class="control">
                        <div class="select">
                            <select data-userSelectedTime="" id="send_time">
                              <option>12:00</option>
                              <option>12:15</option>
                              <option>12:30</option>
                              <option>12:45</option>
                              <option>01:00</option>
                              <option>01:15</option>
                              <option>01:30</option>
                              <option>01:45</option>
                              <option>02:00</option>
                              <option>02:15</option>
                              <option>02:30</option>
                              <option>02:45</option>
                              <option>03:00</option>
                              <option>03:15</option>
                              <option>03:30</option>
                              <option>03:45</option>
                              <option>04:00</option>
                              <option>04:15</option>
                              <option>04:30</option>
                              <option>04:45</option>
                              <option>05:00</option>
                              <option>05:15</option>
                              <option>05:30</option>
                              <option>05:45</option>
                              <option>06:00</option>
                              <option>06:15</option>
                              <option>06:30</option>
                              <option>06:45</option>
                              <option>07:00</option>
                              <option>07:15</option>
                              <option>07:30</option>
                              <option>07:45</option>
                              <option>08:00</option>
                              <option>08:15</option>
                              <option>08:30</option>
                              <option>08:45</option>
                              <option>09:00</option>
                              <option>09:15</option>
                              <option>09:30</option>
                              <option>09:45</option>
                              <option>10:00</option>
                              <option>10:15</option>
                              <option>10:30</option>
                              <option>10:45</option>
                              <option>11:00</option>
                              <option>11:15</option>
                              <option>11:30</option>
                              <option>11:45</option>
                            </select>
                        </div>
                    </div>
                </div>

                <div class="field">
                    <div id="ampm" class="control">
                    <label class="radio">
                        <input id="AM" type="radio" name="ampm" value="AM">
                            AM
                    </label>
                    <label class="radio">
                        <input id="PM" type="radio" name="ampm" value="PM">
                            PM
                        </label>
                    </div>
                </div>

                <div class="control pt-5 pb-2 has-text-centered">
                    <button data-remindrId="{{id}}" id='save-remindr' class="button profile-buttons is-info is-rounded is-fullwidth color-change-5x">
                        Save Remindr
                    </button>
                </div>

                <div class="control pt-5 pb-2 has-text-centered">
                    <button id='cancel' class="button profile-buttons is-info is-rounded is-fullwidth color-change-5x">
                        Cancel
                    </button>
                </div>

            </div>
        </div>
    </div>
</section>
{{/localTimeRemindrs }}

